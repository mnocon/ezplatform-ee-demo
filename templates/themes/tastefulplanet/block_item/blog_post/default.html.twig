<article class="embed content-type-blog-post">
        <div class="banner-image">
            {{ ez_render_field(content, 'image', {
                'parameters': {
                    'alias': 'original',
                    'class': 'img-fluid w-100'
                }
            }) }}
            <a href="{{ path(location) }}">
                <div class="card-img-overlay">
                    <h2 class="card-title">{{ ez_content_name( content ) }}</h2>
                </div>
            </a>
        </div>
</article>
