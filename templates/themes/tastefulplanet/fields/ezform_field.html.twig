{% extends "EzPublishCoreBundle::content_fields.html.twig" %}

{% block ezform_field %}
    {% set formValue = field.value.getForm() %}
    {% if formValue %}
        {% set form = formValue.createView() %}
        {% form_theme form '@ezdesign/fields/bootstrap_4_layout.html.twig' %}
        {% spaceless %}
            {% if not ez_is_field_empty(content, field) %}
                {{ form(form.children.fields is defined ? form.children.fields : form) }}
            {% endif %}
        {% endspaceless %}
    {% endif %}
{% endblock %}
