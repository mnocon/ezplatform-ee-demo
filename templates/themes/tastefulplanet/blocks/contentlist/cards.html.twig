{% extends ':blocks:_block.html.twig' %}

{% block block_identifier %}contentlist{% endblock %}
{% block block_class %}{{ block_class }}{% endblock %}

{% block block_content %}
    {%  set render_empty = render_empty|default(false) %}
    <div class="row block-header">
        <span class="block-header__name">{{ block_name }}</span>
    </div>
    {% if contentArray is defined and contentArray|length > 0 %}
    <div class="row cards-container">
        <div class="card-deck">
            {% for item in contentArray %}
                {{ render(controller('ez_content:viewLocation', {
                    'locationId': item.location.id,
                    'viewType': 'block_item_card'
                })) }}
            {% endfor %}
        </div>
    </div>
    {% endif %}
{% endblock %}
