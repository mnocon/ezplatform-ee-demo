{% extends pagelayout %}

{% trans_default_domain 'reset_password' %}

{% block page_head %}
    {% set title = 'ezplatform.reset_password.change_password'|trans|desc('Change password') %}

    {{ parent() }}
{% endblock %}

{% block content %}
    <section class="user-form">
        <div class="row user-form__row">
            <div class="col-md-4 offset-md-4 user-form__col">
                <h2 class="user-form__header">
                    {{ 'ezplatform.reset_password.change_password'|trans|desc('Change password') }}
                </h2>
                {{ form_start(form_reset_user_password) }}
                <div class="form-group">
                    {{ form_label(form_reset_user_password.new_password.first) }}
                    {{ form_widget(form_reset_user_password.new_password.first) }}
                    <div class="user-form__errors">
                        {{ form_errors(form_reset_user_password.new_password.first) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form_reset_user_password.new_password.second) }}
                    {{ form_widget(form_reset_user_password.new_password.second) }}
                    <div class="user-form__errors">
                        {{ form_errors(form_reset_user_password.new_password.second) }}
                    </div>
                </div>
                <div class="form-group user-form__btn-group">
                    {{ form_row(form_reset_user_password.update, {'attr': {'class': 'user-form__btn btn btn-primary' }}) }}
                </div>
                {{ form_end(form_reset_user_password) }}
            </div>
        </div>
    </section>
{% endblock content %}
